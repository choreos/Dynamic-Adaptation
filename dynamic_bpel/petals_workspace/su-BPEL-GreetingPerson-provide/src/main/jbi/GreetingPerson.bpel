<process name="GreetingPerson"
         targetNamespace="http://petals.ow2.org/bpel/GreetingPerson/"          
         xmlns:tns="http://petals.ow2.org/bpel/GreetingPerson/"
         xmlns:artifacts="http://petals.ow2.org/bpel/GreetingPerson/Artifacts"
         xmlns="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable">

    <!-- Import the client WSDL -->
	<import location="GreetingPersonDefinition.wsdl" 
			namespace="http://petals.ow2.org/bpel/GreetingPerson/" 
	        importType="http://schemas.xmlsoap.org/wsdl/" />
	        
	<import location="GreetingPersonArtifacts.wsdl"
			namespace="http://petals.ow2.org/bpel/GreetingPerson/Artifacts"
			importType="http://schemas.xmlsoap.org/wsdl/" />
	                
    <!-- ================================================================= -->         
    <!-- PARTNERLINKS                                                      -->
    <!-- List of services participating in this BPEL process               -->
    <!-- ================================================================= -->         
    <partnerLinks>
        <!-- The 'client' role represents the requester of this service. -->
        <partnerLink name="GreetingPersonPartner"
                     partnerLinkType="artifacts:GreetingPersonPLT"
                     myRole="GreetingPersonRole" />
        <bpel:partnerLink name="GreetingPartner"></bpel:partnerLink>
    </partnerLinks>
  
    <!-- ================================================================= -->         
    <!-- VARIABLES                                                         -->
    <!-- List of messages and XML documents used within this BPEL process  -->
    <!-- ================================================================= -->         
    <variables>
    	<bpel:variable 	name="GreetingPersonPartnerRequest" 
    					messageType="tns:GreetingPersonRequestMessage" />
    </variables>

    <!-- ================================================================= -->         
    <!-- ORCHESTRATION LOGIC                                               -->
    <!-- Set of activities coordinating the flow of messages across the    -->
    <!-- services integrated within this business process                  -->
    <!-- ================================================================= -->         
    <sequence name="MainSequence">
    	<bpel:receive 	name="ReceiveMessage" partnerLink="GreetingPersonPartner" 
    					operation="process" portType="tns:GreetingPersonPortType" 
    					variable="GreetingPersonPartnerRequest" />
    </sequence>
</process>
